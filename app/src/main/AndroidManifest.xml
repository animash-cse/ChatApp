<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.animash.chat.app.bd">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.animash.chat.app.bd.Utils.Offline"
        android:allowBackup="true"
        android:icon="@drawable/chat_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.animash.chat.app.bd.WelcomeSlide.WelcomeActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.animash.chat.app.bd.WelcomeSlide.IntroActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.animash.chat.app.bd.Home.MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.animash.chat.app.bd.LoginReg.LoginActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.animash.chat.app.bd.ForgotPassword.ForgotPassActivity"
            android:parentActivityName="com.animash.chat.app.bd.LoginReg.LoginActivity" />
        <activity
            android:name="com.animash.chat.app.bd.LoginReg.RegisterActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.animash.chat.app.bd.ProfileSetting.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.animash.chat.app.bd.Home.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.animash.chat.app.bd.ProfileSetting.StatusUpdateActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.animash.chat.app.bd.ProfileSetting.SettingsActivity" />
        <activity
            android:name="com.animash.chat.app.bd.Friends.FriendsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.animash.chat.app.bd.Home.MainActivity" />
        <activity
            android:name="com.animash.chat.app.bd.Profile.ProfileActivity"
            android:configChanges="orientation|screenSize|screenLayout">
            <intent-filter>
                <action android:name="com.infobox.hasnat.ume.ume_TARGET_NOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.animash.chat.app.bd.Chat.ChatActivity"
            android:parentActivityName="com.animash.chat.app.bd.Home.MainActivity" />
        <activity
            android:name="com.animash.chat.app.bd.Search.SearchActivity"
            android:configChanges="orientation|screenSize" />

        <!-- Cropping image library -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <!-- Firebase Messaging Service -->
        <service android:name="com.animash.chat.app.bd.Utils.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>